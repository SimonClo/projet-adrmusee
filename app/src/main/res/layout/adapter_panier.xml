<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:background="@drawable/linearborder"
        android:layout_gravity="center"
        >
        <ImageView
            android:id="@+id/productBasket_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/adrlogo"
            android:layout_margin="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/productBasket_name"
            android:layout_width = "120dp"
            android:layout_height="match_parent"
            android:text="Produit 1"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="@color/bleugeadr"
            android:layout_toRightOf="@+id/delButton"/>

        <TextView
            android:id="@+id/productBasket_price"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="@string/command_default_price"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/productBasket_quantity"/>

        <TextView
            android:id="@+id/productBasket_quantity"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="x1"
            android:gravity="center"
            android:layout_toRightOf="@+id/productBasket_name"
            android:textSize="12dp"/>

        <ImageButton
            android:id="@+id/delButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:src="@drawable/ic_delete_black_24dp"
            />

    </LinearLayout>
</LinearLayout>