<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <TextView
            android:id="@+id/command_name"
            android:layout_width = "130dp"
            android:layout_height = "wrap_content"
            android:text="Commande"
            android:textSize="15dp"
            android:layout_margin="10dp"
            android:textColor="@color/bleugeadr"/>

        <TextView
            android:id="@+id/command_ready"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="En cours de prÃ©paration"
            android:layout_toRightOf="@+id/command_name"
            android:layout_margin="10dp"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/command_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/command_default_price"
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/command_ready"/>

    </LinearLayout>

</LinearLayout>